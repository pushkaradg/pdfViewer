<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle
    xmlns="http://soap.sforce.com/2006/04/metadata"
    fqn="showPdfByUrl"
>
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Show PDF File By URL</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig
            targets="lightning__AppPage, lightning__HomePage, lightning__RecordPage, lightningCommunity__Default"
        >
            <property
                label="PDF URL"
                name="url"
                type="String"
                placeholder="Please enter PDF file's URL."
            />
            <property
                label="Height in rem"
                name="heightInRem"
                type="Integer"
                default="40"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
